<Window x:Class="RVIAPOON.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RVIAPOON.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="404" Width="459">
    <Grid Margin="0,0,0,-6">
        <StackPanel>
            <Label Content="Логин" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="55,50,55,0" Grid.Column="1" Grid.Row="1"/>
            <TextBox x:Name="login_txb" Width="265" Margin="10,20,10,0" Grid.Column="1" Grid.Row="2" Height="25" TextAlignment="Center"/>
            <Label Content="Пароль" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="10,30,10,0"  Grid.Column="1" Grid.Row="3"/>
            <PasswordBox x:Name="password_txb" Width="265" Grid.Column="1" Margin="10,10,10,10" Grid.Row="4" Height="25" HorizontalContentAlignment="Center"/>
            <Button Width="100" Height="34" Content="Вход" Margin="85,22,100,10" Grid.Column="1" Grid.Row="5" Click="Entry_Click"/>
            <Button Width="55" Height="25" Content="Выход" Margin="107,13,122,13" Grid.Column="1" Grid.Row="6" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
